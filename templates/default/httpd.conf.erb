Alias /<%= node['repo']['name'] %> "<%= node['repo']['dir'] %>"

<VirtualHost *:80>
  DocumentRoot <%= node['repo']['dir'] %>
  <Directory <%= node['repo']['dir'] %>>
    Options Indexes FollowSymlinks
    Order allow,deny
    Allow from all
  </Directory>
</VirtualHost>

<Directory <%= node['repo']['dir'] %>>
  AllowOverride None
  Options FollowSymlinks
  Order allow,deny
  Allow from all
</Directory>
