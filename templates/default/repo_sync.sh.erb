#! /bin/bash

centos_local='/naspool/repo/os/Linux/CentOS/'

# Centos 6
centos_remote='rsync://rsync.mirrorservice.org/mirror.centos.org/6*'
rsync -aSPvm --include='6**/' --progress --safe-links --delete --exclude "**i386**" ${centos_remote} ${centos_local}

# Centos 7
centos_remote='rsync://rsync.mirrorservice.org/mirror.centos.org/7*'
rsync -aSPvm --include='7**/' --progress --safe-links --delete --include "*.iso" --exclude "*" ${centos_remote} ${centos_local}
